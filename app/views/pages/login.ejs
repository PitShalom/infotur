         }
        
         .fundoo{
            opacity: 50%;
            background-color: black;
            padding: 100px;
            position: relative;
            top: -35px;
            height: 150px;
            border-radius: 5px;
            width: 170px;
            left: 50px;
         }
        
        } 
        
